void main() {
    int a = 1000;
    sout("The value of a is {a}!");

    a = 1500;
    sout("The value of a is {a}!");

    a += 15;
    sout("The value of a is {a} now!");

    a -= 15;
    sout("The value of a is {a} now!");

    a /= 5;
    sout("The value of a is {a} now!");

    a *= 5;
    sout("The value of a is {a} now!");
}